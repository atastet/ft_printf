#include "../includes/ft_printf.h"

static	int	display_var(t_lst *flags, va_list args, const char *format)
{

	return (j);
}

int				display(t_lst *flags, va_list args, const char *format)
{
	char	buff[BUFF_SIZE + 1];
	int		i;
	int		j;
	t_lst	*tmp;
	
	tmp = flags;
	i = 0;
	j = 0;
	while (format[i])
	{
		while (format[i] != '%')
		{
			buff[j] = format[i];
			j++;
			i++;
		}
		if (format[i] == '%')
		{
			j = display_var(flags, args, format, buff, i, j);
			i += tmp->len;
		}
		i++;
	}
	//NEED TO WORK ON SOLUTION WHEN YOU ARE REACHING THE END OF BUFF
	return(j);
}
